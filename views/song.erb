<h2>Author: <%= @author.name %></h2>
<h3>Project: <%= @author.project.name %></h3>

<form action="/projects/<%= @author.project.id %>/authors/<%= @author.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename author</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update author</button>
</form>

<form action="/projects/<%= @author.project.id %>/authors/<%= @author.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete author</button>
</form>

<a href="/projects/<%= @author.project.id %>">Back to <%= @author.project.name %></a>
