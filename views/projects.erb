
  <h3>Available Projects</h3>

  <% if @projects.any? %>
  <ul>
    <% @projects.sort_by(&:name).each do |project| %>
    <li><a href="/projects/<%= project.id %>"><%= project.name %></a></li>
    <% end %>
  </ul>
  <% else %>
  <p>There are currently no projects to display.</p>
  <% end %>

  <a href="/projects/new">Add a New Project</a>
  <form action="/projects/search/" method="get">
    <div class="form-group">
      <label for="searched">Search</label>
      <input id="searched" name="searched" class="form-control" type="text">
    </div>
    <button type="submit">Go!</button>
  </form>
