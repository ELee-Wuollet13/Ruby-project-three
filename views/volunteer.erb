
<br>
<h5>Project: <%= @volunteer.project.title %></h5>
<p>Volunteer: <%= @volunteer.title %></p>

<form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input title="_method" type="hidden" value="patch">

  <label for="title">Retitle volunteer</label>
  <input id="title" title="title" type="text">

  <button type="submit">Update volunteer</button>
</form>

<form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input title="_method" type="hidden" value="delete">

  <button type="submit">Delete volunteer</button>
</form>

<a href="/projects/<%= @volunteer.project.id %>">Back to <%= @volunteer.project.title %></a>
